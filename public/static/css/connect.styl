body
    background-color #f6f6f6
    font-size 14px
    margin: 0px
    //font-family: 'Roboto', sans-serif;
.mtop16
    margin-top 8px
.box
    background-color #fff
    border-radius 8px
    border 1px solid #d6d6d6
    position absolute
    padding 16px
    width 500px
    .btn-success
        height 20%
        width 50%
        position relative
        top 50%
        left 24%
    .form-control
        &:focus
        &:active
            outline: none
            box-shadow none

    .inside
        padding 16px
    .header
        background-color #b5d6b2
        border-radius 40px 40px 40px 40px
        padding 12px
        a
            img
                display block
                margin 0px auto
                width 20%
    .footer
        text-align center
        a
            display inline-block
            font-size .9em
            &:last-child
                margin-left 24px

.box_login
    left calc(50% - 250px)
    top calc(43% - 196px)

.box_registro
    left calc(50% - 250px)
    top calc(53% - 324px)


